<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CountDownTimer"
             x:Class="CountDownTimer.MainPage">
 

    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label x:Name="CountDowntLabel" HorizontalTextAlignment="Center" />
             
            
            <Button x:Name="btnStartStop" Text="Start" Clicked="OnBtnClicked" />


            <Button x:Name="btnPause" IsVisible="False" Text="Reset" Clicked="OnBtnClickedReset" />

        </StackLayout>
    </ContentPage.Content>

</ContentPage>